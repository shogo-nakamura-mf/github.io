    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Brain Model Interaction
            const brainLayers = document.querySelectorAll('.brain-layer');
            const brainInfoContainer = document.getElementById('brain-info-container');
            const defaultInfo = document.getElementById('brain-info-default');

            brainLayers.forEach(layer => {
                layer.addEventListener('click', function() {
                    const targetId = this.dataset.target;
                    
                    // Hide all info sections
                    brainInfoContainer.querySelectorAll('div[id^="brain-info-"]').forEach(info => {
                        info.classList.add('hidden');
                    });
                    
                    // Show target info section
                    const targetInfo = document.getElementById(targetId);
                    if (targetInfo) {
                        targetInfo.classList.remove('hidden');
                    }
                });
            });

            // Playbook Tabs Interaction
            const tabs = document.querySelectorAll('.tab-btn');
            const contentPanels = document.querySelectorAll('.content-section');

            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    tabs.forEach(item => {
                        item.classList.remove('tab-active');
                    });
                    this.classList.add('tab-active');

                    const targetId = this.dataset.target;
                    contentPanels.forEach(panel => {
                        if (panel.id === targetId) {
                            panel.classList.add('active');
                        } else {
                            panel.classList.remove('active');
                        }
                    });
                });
            });
            
            // Accordion Interaction
            document.querySelectorAll('.accordion-header').forEach(header => {
                header.addEventListener('click', () => {
                    const content = header.nextElementSibling;
                    const arrow = header.querySelector('span');
                    
                    // Close all other open accordions
                    document.querySelectorAll('.accordion-content.open').forEach(openContent => {
                        if (openContent !== content) {
                            openContent.classList.remove('open');
                            openContent.previousElementSibling.classList.remove('active');
                            openContent.previousElementSibling.querySelector('span').style.transform = 'rotate(0deg)';
                        }
                    });

                    content.classList.toggle('open');
                    header.classList.toggle('active'); // Add active class to header
                    if (content.classList.contains('open')) {
                        arrow.style.transform = 'rotate(180deg)';
                    } else {
                        arrow.style.transform = 'rotate(0deg)';
                    }
                });
            });
            
            // Loss Aversion Chart
            const ctx = document.getElementById('lossAversionChart').getContext('2d');
            const lossAversionChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['+1万円の利益を得る喜び', '−1万円の損失を被る苦痛'],
                    datasets: [{
                        label: '心理的インパクトの強さ',
                        data: [1, 2.25],
                        backgroundColor: [
                            'rgba(56, 189, 248, 0.7)', /* Sky 400 */
                            'rgba(239, 68, 68, 0.7)'  /* Red 500 */
                        ],
                        borderColor: [
                            'rgba(14, 165, 233, 1)', /* Sky 500 */
                            'rgba(220, 38, 38, 1)'   /* Red 600 */
                        ],
                        borderWidth: 1,
                        borderRadius: 5 /* Rounded bars */
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            beginAtZero: true,
                            grid: {
                                display: false /* Hide x-axis grid lines */
                            },
                            ticks: {
                                display: false /* Hide x-axis labels */
                            },
                            title: {
                                display: true,
                                text: '心理的インパクトの相対的な強さ',
                                color: '#475569', /* Slate 600 */
                                font: {
                                    size: 14,
                                    weight: '500'
                                }
                            }
                        },
                        y: {
                            grid: {
                                display: false /* Hide y-axis grid lines */
                            },
                            ticks: {
                                color: '#334155', /* Slate 700 */
                                font: {
                                    size: 14
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(30, 41, 59, 0.9)', /* Slate 800 */
                            titleColor: '#fff',
                            bodyColor: '#fff',
                            borderColor: '#64748b', /* Slate 500 */
                            borderWidth: 1,
                            cornerRadius: 6,
                            padding: 12,
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.x !== null) {
                                        label += `約${context.parsed.x}倍のインパクト`;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Smooth scrolling for nav links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
</body>
</html>
